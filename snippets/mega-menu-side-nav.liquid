{% comment %}
  Renders a side navigation mega menu.
  @param {object} parent_link - The linklist to render.
  @param {string} id - Unique ID to assign to the element.
  @param {object} section - The section object (header).
  @param {object} block - The block settings.
{% endcomment %}

<div class="mega-menu-side-nav" id="{{ id }}" data-mega-menu-side-nav>
  <div class="mega-menu-side-nav__container">
    {% liquid
      assign first_active_handle = nil
      for link in parent_link.links
        if link.links != blank
          assign first_active_handle = link.handle
          break
        endif
      endfor
    %}

    <!-- Left Sidebar - Main Categories -->
    <div class="mega-menu-side-nav__sidebar">
      <ul class="mega-menu-side-nav__list list-unstyled">
        {% for link in parent_link.links %}
          <li class="mega-menu-side-nav__item" data-handle="{{ link.handle }}">
            <a href="{{ link.url }}" class="mega-menu-side-nav__link {% if link.handle == first_active_handle %}is-active{% endif %}" data-category-link>
              <span>{{ link.title }}</span>
              {% if link.links != blank %}
                <span class="mega-menu-side-nav__arrow">
                  <svg width="6" height="10" viewBox="0 0 6 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M1 1L5 5L1 9" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </span>
              {% endif %}
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>

    <!-- Right Content Area - Subcategories & Featured Image -->
    <div class="mega-menu-side-nav__content-wrapper">
      {% for link in parent_link.links %}
        {% if link.links != blank %}
          <div class="mega-menu-side-nav__content {% if link.handle == first_active_handle %}is-active{% endif %}" data-category-content="{{ link.handle }}">
            <div class="mega-menu-side-nav__grid">
              <!-- Subcategories List with Bullet Icons -->
              <div class="mega-menu-side-nav__sub-items">
                <ul class="mega-menu-side-nav__sub-list list-unstyled">
                  {% for child_link in link.links %}
                    <li class="mega-menu-side-nav__sub-item">
                      <a href="{{ child_link.url }}" class="mega-menu-side-nav__sub-link">
                        <!-- Get icon from menu_icon metafield -->
                        {% assign menu_icon = child_link.object.metafields.custom.menu_icon %}

                        {% if menu_icon %}
                        <span class="mega-menu-side-nav__bullet-icon" style="width: 12px; height: 12px; min-width: 12px; display: block;">
                          {{ menu_icon | image_url: width: 30 | image_tag: class: 'mega-menu-icon-img', loading: 'lazy', style: 'width: 100%; height: 100%; object-fit: contain;' }}
                        </span>
                        {% endif %}
                        <span class="mega-menu-side-nav__sub-title">{{ child_link.title }}</span>
                      </a>
                    </li>
                  {% endfor %}
                </ul>
              </div>

              <!-- Featured Product Image -->
              <div class="mega-menu-side-nav__featured">
                {% liquid
                  assign featured_image = nil
                  for sub_block in block.blocks
                    if sub_block.type == 'mega_menu_image'
                      if sub_block.settings.title == link.title
                        assign featured_image = sub_block.settings.image
                        break
                      endif
                    endif
                  endfor

                  if featured_image == nil and link.type == 'collection_link'
                    assign featured_image = link.object.featured_image
                  endif
                %}
                {% if featured_image %}
                  <div class="mega-menu-side-nav__featured-image">
                    {{ featured_image | image_url: width: 500 | image_tag: loading: 'lazy' }}
                  </div>
                {% endif %}
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% style %}
  /* RESTORED CSS DIRECTLY TO SNIPPET TO BYPASS CACHE ISSUES */
  .mega-menu-side-nav {
    --sidebar-width: 220px;
    --subitems-width: 180px;
    --featured-width: 200px; /* Reduced slightly to ensure fit */
    background-color: #fff;
    width: 680px !important;
    max-width: 680px !important;
    margin: 0 auto;
    color: #000;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    border-radius: 8px;
  }

  .mega-menu-side-nav__container {
    display: flex;
    min-height: 380px;
    align-items: stretch;
  }

  .mega-menu-side-nav__sidebar {
    width: var(--sidebar-width);
    flex-shrink: 0;
    border-right: 1px solid #e0e0e0;
    padding: 0;
    background: #fff;
  }

  .mega-menu-side-nav__list {
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .mega-menu-side-nav__item {
    margin: 0;
    border-bottom: 1px solid #f0f0f0;
  }

  .mega-menu-side-nav__item:last-child {
    border-bottom: none;
  }

  .mega-menu-side-nav__link {
    display: flex !important;
    justify-content: space-between;
    align-items: center;
    padding: 14px 20px;
    text-decoration: none;
    color: #000;
    font-weight: 400;
    transition: all 0.2s ease;
    font-size: 15px;
    line-height: 1.2;
    background: #fff;
    position: relative;
  }

  .mega-menu-side-nav__link:hover {
    background-color: #f5f5f5;
  }

  .mega-menu-side-nav__link.is-active {
    background-color: #e0e0e0;
    font-weight: 500;
  }

  .mega-menu-side-nav__arrow {
    width: 6px;
    height: 10px;
    flex-shrink: 0;
    margin-left: 8px;
    opacity: 0.5;
    color: #000;
  }

  .mega-menu-side-nav__content-wrapper {
    flex: 1;
    padding: 0;
    background-color: #fff;
    /* Removed padding here, handled inside content */
  }

  .mega-menu-side-nav__content {
    display: none;
    width: 100%;
    padding: 20px 24px;
    box-sizing: border-box; /* Critical for padding calculation */
  }

  .mega-menu-side-nav__content.is-active {
    display: block;
  }

  .mega-menu-side-nav__grid {
    display: flex;
    width: 100%;
    gap: 0;
    align-items: flex-start;
    justify-content: space-between; /* Ensure spacing */
  }

  .mega-menu-side-nav__sub-items {
    flex: 0 0 var(--subitems-width); /* Fixed width */
    max-width: var(--subitems-width);
    padding-right: 10px;
    box-sizing: border-box;
  }

  .mega-menu-side-nav__sub-list {
    display: flex;
    flex-direction: column;
    gap: 6px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .mega-menu-side-nav__sub-item {
    margin: 0;
  }

  /* CRITICAL: Force row layout for icon and text */
  .mega-menu-side-nav__sub-link {
    display: flex !important;
    flex-direction: row !important;
    align-items: center !important;
    gap: 8px !important;
    text-decoration: none;
    color: #000;
    padding: 4px 0;
    width: 100%;
  }

  /* CRITICAL: Force small icon size */
  .mega-menu-side-nav__bullet-icon {
    display: block !important; /* Ensure block model applies */
    width: 12px !important;    /* Fixed width */
    height: 12px !important;   /* Fixed height */
    min-width: 12px !important;
    max-width: 12px !important;
    flex-shrink: 0 !important;
    overflow: hidden !important; /* Cut off if image is huge */
    margin-right: 8px !important;
    display: inline-flex !important;
    align-items: center !important;
    justify-content: center !important;
  }

  /* Force image to fit container */
  .mega-menu-side-nav__bullet-icon img,
  img.mega-menu-icon-img {
    width: 100% !important;
    height: 100% !important;
    max-width: 100% !important;
    max-height: 100% !important;
    object-fit: contain !important;
    display: block !important;
    margin: 0 !important;
    padding: 0 !important;
    border: none !important;
  }

  .mega-menu-side-nav__sub-title {
    font-size: 15px;
    font-weight: 400;
    line-height: 1.3;
    color: #000;
    white-space: normal; /* Allow wrapping */
  }

  .mega-menu-side-nav__featured {
    flex: 1;
    display: flex;
    justify-content: flex-end; /* Align right */
    align-items: center;
    padding-left: 10px;
    min-width: 0; /* Allow shrinking if absolutely necessary */
  }

  .mega-menu-side-nav__featured-image {
    width: 100%;
    max-width: 210px; /* Increased size as requested */
  }

  .mega-menu-side-nav__featured-image img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: contain;
  }

  /* Parent style overrides ensuring 600px constraint */
  .menu-list__list-item > .menu-list__submenu:has(.mega-menu-side-nav) {
    width: 680px !important;
    max-width: 680px !important;
    left: 50% !important;
    transform: translateX(-50%) !important;
    padding-inline: 0 !important;
    background-color: transparent !important;
    border: none !important;
    box-shadow: none !important; /* Clean slate */
  }

  .menu-list__submenu:has(.mega-menu-side-nav) .menu-list__submenu-inner {
    padding: 0 !important;
    width: 680px !important;
    max-width: 680px !important;
  }

  .menu-list__submenu:has(.mega-menu-side-nav) .mega-menu.section {
    padding: 0 !important;
    margin: 0 !important;
    width: 680px !important;
    max-width: 680px !important;
    display: block !important;
  }

  .menu-list__submenu:has(.mega-menu-side-nav) .mega-menu__grid {
    padding: 0 !important;
    width: 680px !important;
    max-width: 680px !important;
    display: block !important;
  }

  @media screen and (max-width: 1200px) {
    .mega-menu-side-nav__featured {
      display: none;
    }
  }
{% endstyle %}

<script src="{{ 'mega-menu-side-nav.js' | asset_url }}" type="module"></script>
