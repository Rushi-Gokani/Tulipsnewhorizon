{% comment %}
  Product Card Button Snippet
  - "Add to Cart" for available products
  - "Notify Me" for sold out products
  - Custom hover styles
{% endcomment %}

{% liquid
  assign variant = product.selected_or_first_available_variant
  assign sold_out = false
  unless variant.available
    assign sold_out = true
  endunless
%}

<div class="product-card-button-container">
  {% if sold_out %}
    <button
      type="button"
      class="product-card-btn product-card-btn--sold-out"
      disabled
    >
      NOTIFY ME
    </button>
  {% else %}
    <form method="post" action="/cart/add" class="product-card-btn-form">
      <input type="hidden" name="id" value="{{ variant.id }}">
      <button
        type="submit"
        class="product-card-btn product-card-btn--add-to-cart"
      >
        ADD TO CART
      </button>
    </form>
  {% endif %}
</div>

<style>
  .product-card-button-container {
    padding-top: 10px;
    width: 100%;
    margin-top: 15px; /* Push to bottom if flex column */
  }
  
  .product-card-btn {
    width: fit-content;
    min-width: 140px; /* Slightly bigger */
    margin: 0; /* Left align */
    padding: 10px 24px; /* Slightly bigger padding */
    border: 1px solid transparent;
    border-radius: 50px; /* Pill shape */
    font-weight: bold;
    font-size: 13px; /* Slightly bigger font */
    letter-spacing: 1px;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s ease;
    text-align: center;
    display: block;
    line-height: 1.5;
  }

  /* Sold Out - Red/Orange Theme */
  .product-card-btn--sold-out {
    background-color: #D95D39; /* Orange-Red from image/request */
    color: #ffffff;
    border-color: #D95D39;
    cursor: not-allowed;
    opacity: 1; /* Make sure it looks solid */
  }

  /* Add to Cart - Green Theme */
  .product-card-btn--add-to-cart {
    background-color: #A3CA6D;
    color: #ffffff;
    border-color: #A3CA6D;
  }

  /* Hover Effects */
  .product-card-btn--sold-out:hover {
    background-color: #ffffff;
    color: #D95D39;
    border-color: #D95D39;
  }

  .product-card-btn--add-to-cart:hover {
    background-color: #ffffff;
    color: #A3CA6D;
    border-color: #A3CA6D;
  }
</style>
