{% doc %}
  @prompt
    Add section, where marquee text with icon horizotal infinate scrolling
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-marquee-container-{{ ai_gen_id }} {
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px 0;
    display: block;
  }

  .ai-marquee-wrapper-{{ ai_gen_id }} {
    display: flex;
    width: fit-content;
    animation: ai-marquee-scroll-{{ ai_gen_id }} {{ block.settings.animation_speed }}s linear infinite;
  }

  .ai-marquee-content-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    white-space: nowrap;
    gap: {{ block.settings.item_spacing }}px;
  }

  .ai-marquee-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    font-weight: {{ block.settings.text_weight }};
  }

  .ai-marquee-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    flex-shrink: 0;
  }

  .ai-marquee-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    fill: {{ block.settings.icon_color }};
  }

  @keyframes ai-marquee-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .ai-marquee-container-{{ ai_gen_id }}:hover .ai-marquee-wrapper-{{ ai_gen_id }} {
    {% if block.settings.pause_on_hover %}
      animation-play-state: paused;
    {% endif %}
  }

  @media screen and (max-width: 749px) {
    .ai-marquee-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.85 }}px;
    }

    .ai-marquee-icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.85 }}px;
      height: {{ block.settings.icon_size | times: 0.85 }}px;
    }
  }
{% endstyle %}

<marquee-scroller-{{ ai_gen_id }} class="ai-marquee-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-marquee-wrapper-{{ ai_gen_id }}">
    <div class="ai-marquee-content-{{ ai_gen_id }}">
      {% assign marquee_texts = '' %}
      {% if block.settings.marquee_text_1 != blank %}{% assign marquee_texts = marquee_texts | append: block.settings.marquee_text_1 | append: '||' %}{% endif %}
      {% if block.settings.marquee_text_2 != blank %}{% assign marquee_texts = marquee_texts | append: block.settings.marquee_text_2 | append: '||' %}{% endif %}
      {% if block.settings.marquee_text_3 != blank %}{% assign marquee_texts = marquee_texts | append: block.settings.marquee_text_3 | append: '||' %}{% endif %}
      {% if block.settings.marquee_text_4 != blank %}{% assign marquee_texts = marquee_texts | append: block.settings.marquee_text_4 | append: '||' %}{% endif %}
      {% if block.settings.marquee_text_5 != blank %}{% assign marquee_texts = marquee_texts | append: block.settings.marquee_text_5 | append: '||' %}{% endif %}
      {% assign marquee_texts_arr = marquee_texts | split: '||' %}
      {% assign texts_count = marquee_texts_arr.size %}
      {% if texts_count > 0 %}
        {% for i in (1..20) %}
          {% if i <= block.settings.repeat_count %}
            {% assign text_index = i | minus: 1 | modulo: texts_count %}
            {% if block.settings.show_icon %}
              <span class="ai-marquee-icon-{{ ai_gen_id }}">
                {% if block.settings.icon_type == 'star' %}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                {% elsif block.settings.icon_type == 'heart' %}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                  </svg>
                {% elsif block.settings.icon_type == 'check' %}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <polyline points="20 6 9 17 4 12" fill="none" stroke="currentColor" stroke-width="2"/>
                  </svg>
                {% elsif block.settings.icon_type == 'circle' %}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <circle cx="12" cy="12" r="10"/>
                  </svg>
                {% elsif block.settings.icon_type == 'diamond' %}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path d="M12 2l10 10-10 10L2 12 12 2z"/>
                  </svg>
                {% endif %}
              </span>
            {% endif %}
            <span class="ai-marquee-text-{{ ai_gen_id }}">{{ marquee_texts_arr[text_index] }}</span>
          {% endif %}
        {% endfor %}
      {% endif %}
    </div>

    <div class="ai-marquee-content-{{ ai_gen_id }}" aria-hidden="true">
      {% if texts_count > 0 %}
        {% for i in (1..20) %}
          {% if i <= block.settings.repeat_count %}
            {% assign text_index = i | minus: 1 | modulo: texts_count %}
            {% if block.settings.show_icon %}
              <span class="ai-marquee-icon-{{ ai_gen_id }}">
                {% if block.settings.icon_type == 'star' %}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                {% elsif block.settings.icon_type == 'heart' %}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                  </svg>
                {% elsif block.settings.icon_type == 'check' %}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <polyline points="20 6 9 17 4 12" fill="none" stroke="currentColor" stroke-width="2"/>
                  </svg>
                {% elsif block.settings.icon_type == 'circle' %}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <circle cx="12" cy="12" r="10"/>
                  </svg>
                {% elsif block.settings.icon_type == 'diamond' %}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path d="M12 2l10 10-10 10L2 12 12 2z"/>
                  </svg>
                {% endif %}
              </span>
            {% endif %}
            <span class="ai-marquee-text-{{ ai_gen_id }}">{{ marquee_texts_arr[text_index] }}</span>
          {% endif %}
        {% endfor %}
      {% endif %}
    </div>
  </div>
</marquee-scroller-{{ ai_gen_id }}>

<script>
  (function() {
    class MarqueeScroller{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.adjustSpeed();
      }

      adjustSpeed() {
        const wrapper = this.querySelector('.ai-marquee-wrapper-{{ ai_gen_id }}');
        if (wrapper) {
          const contentWidth = wrapper.scrollWidth / 2;
          const speed = {{ block.settings.animation_speed }};
          wrapper.style.animationDuration = speed + 's';
        }
      }
    }

    customElements.define('marquee-scroller-{{ ai_gen_id }}', MarqueeScroller{{ ai_gen_id }});
  })();
</script>

