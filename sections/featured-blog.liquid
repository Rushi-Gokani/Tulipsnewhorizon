{%- comment -%} Featured Blog Cards Section {%- endcomment -%}

{%- style -%}
  .featured-blog-section {
    background: #FAFAFA;
    position: relative;
    padding: 50px 0 60px;
  }
  
  .featured-blog-container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 50px;
  }
  
  .featured-blog-header {
    display: flex;
    justify-content: center;
    align-items: center;
    padding-top: 0px;
    margin-bottom: 50px;
    position: relative;

  }
  
  .featured-blog-header__content {
    text-align: center;
  }
  
  .featured-blog-header__title {
    font-size: 48px;
    font-weight: 100;
    color: #2C2C2C;
    margin: 10px 0 0 0;
    line-height: 1.2;
    letter-spacing: 0.5px;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  }
  
  .featured-blog-header__action {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    align-items: center;
    gap: 12px;
  }
  
  .featured-blog-link {
    display: inline-flex;
    align-items: center;
    font-size: 13px;
    font-weight: 700;
    color: #666666;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 2.5px;
    transition: color 0.3s ease;
    border-bottom: 1px solid #A8D5BA;
    padding-bottom: 3px;
  }
  
  .featured-blog-link:hover {
    color: #333333;
  }
  
  .featured-blog-nav {
    display: flex;
    gap: 10px;
  }
  
  .featured-blog-nav__btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: auto;
    height: auto;
    border: none;
    background: transparent;
    color: #AAAAAA;
    border-radius: 0;
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0;
  }
  
  .featured-blog-nav__btn:hover {
    background: transparent;
    color: #666666;
  }
  
  .featured-blog-nav__btn svg {
    width: 22px;
    height: 22px;
  }
  
  .featured-blog-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 22px;
  }
  
  .featured-blog-card {
    background: transparent;
    border-radius: 0;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    box-shadow: none;
  }
  
  .featured-blog-card__image {
    position: relative;
    overflow: hidden;
    aspect-ratio: 1.35/1;
  }
  
  .featured-blog-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }
  
  .featured-blog-card__image:hover img {
    transform: scale(1.06);
  }
  
  .featured-blog-card__image-placeholder {
    width: 100%;
    height: 100%;
    background: #BBBBBB;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .featured-blog-card__image-placeholder svg {
    width: 50px;
    height: 50px;
    color: #888888;
  }
  
  .featured-blog-card__content {
    padding: 16px 18px 24px;
    display: flex;
    flex-direction: column;
    flex: 1;
  }
  
  .featured-blog-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 10px;
  }
  
  .featured-blog-card__tag {
    font-size: 9px;
    color: #FFFFFF;
    background: #8B3A8B;
    padding: 4px 10px;
    border-radius: 2px;
    text-transform: uppercase;
    font-weight: 600;
    letter-spacing: 0.3px;
  }
  
  .featured-blog-card__title {
    font-size: 16px;
    font-weight: 400;
    color: #2C2C2C;
    margin: 0 0 10px;
    line-height: 1.35;
  }
  
  .featured-blog-card__title a {
    color: inherit;
    text-decoration: none;
  }
  
  .featured-blog-card__title a:hover {
    color: #000000;
  }
  
  .featured-blog-card__excerpt {
    font-size: 12px;
    color: #666666;
    line-height: 1.55;
    margin: 0 0 16px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .featured-blog-card__meta {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 0;
    font-size: 10px;
    color: #999999;
    margin-top: auto;
    margin-bottom: 10px;
    text-transform: uppercase;
    letter-spacing: 0.6px;
  }
  
  .featured-blog-card__meta-author,
  .featured-blog-card__meta-date {
    display: flex;
    align-items: center;
  }
  
  .featured-blog-card__meta-author::after {
    content: "";
    display: inline-block;
    width: 1px;
    height: 8px;
    background: #CCCCCC;
    margin: 0 8px;
  }
  
  .featured-blog-card__meta svg {
    display: none;
  }
  
  .featured-blog-card__button {
    display: inline-flex;
    align-items: center;
    padding: 0;
    background: transparent;
    color: #2C2C2C;
    font-size: 10px;
    font-weight: 400;
    text-decoration: underline;
    border-radius: 0;
    transition: all 0.3s ease;
    text-transform: uppercase;
    width: fit-content;
    letter-spacing: 1px;
  }
  
  .featured-blog-card__button:hover {
    color: #000000;
  }
  
  .featured-blog-card__button svg {
    display: none;
  }
  
  /* Responsive Styles */
  @media screen and (max-width: 1024px) {
    .featured-blog-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .featured-blog-header__action {
      position: static;
      transform: none;
      margin-top: 20px;
    }
    
    .featured-blog-header {
      flex-direction: column;
    }
  }
  
  @media screen and (max-width: 768px) {
    .featured-blog-container {
      padding: 0 20px;
    }
    
    .featured-blog-grid {
      /* Mobile: horizontal slider-like row (swipe left/right) */
      display: flex;
      flex-wrap: nowrap;
      gap: 16px;
      overflow-x: auto;
      overflow-y: hidden;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
      padding-bottom: 10px;
    }

    .featured-blog-grid::-webkit-scrollbar {
      height: 6px;
    }

    .featured-blog-grid::-webkit-scrollbar-thumb {
      background: rgba(0, 0, 0, 0.15);
      border-radius: 999px;
    }

    .featured-blog-card {
      flex: 0 0 auto;
      width: clamp(240px, 78vw, 340px);
      scroll-snap-align: start;
    }
    
    .featured-blog-header {
      margin-bottom: 35px;
    }
    
    .featured-blog-header__title {
      font-size: 24px;
    }
    
    .featured-blog-card__content {
      padding: 20px 16px 22px;
    }
    
    .featured-blog-card__title {
      font-size: 15px;
    }
    
    .featured-blog-card__excerpt {
      font-size: 11px;
    }
    
    .featured-blog-section {
      padding: 40px 0 50px;
    }
  }

  /* Guardrail: prevent any accidental horizontal scroll on small screens */
  @media screen and (max-width: 768px) {
    .featured-blog-section {
      /* Allow horizontal scroll inside the grid only */
      overflow-x: clip;
    }

    .featured-blog-card {
      min-width: 0;
    }

    .featured-blog-card__title,
    .featured-blog-card__excerpt {
      overflow-wrap: anywhere;
    }
  }
{%- endstyle -%}

{%- assign blog = section.settings.blog -%}

<div class="featured-blog-section color-{{ section.settings.color_scheme }}">
  <div class="featured-blog-container">
    <div class="featured-blog-header">
      <div class="featured-blog-header__content">
        {%- if section.settings.heading != blank -%}
          <h2 class="featured-blog-header__title">{{ section.settings.heading }}</h2>
        {%- endif -%}
      </div>
      
      <div class="featured-blog-header__action">
        {%- if section.settings.show_view_all and blog != blank -%}
          <a href="{{ blog.url }}" class="featured-blog-link">
            {{ section.settings.view_all_text }}
          </a>
        {%- endif -%}
        
        {%- if section.settings.show_navigation -%}
          <div class="featured-blog-nav">
            <button class="featured-blog-nav__btn" id="blog-prev-{{ section.id }}" aria-label="Previous">
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="15 18 9 12 15 6"></polyline>
              </svg>
            </button>
            <button class="featured-blog-nav__btn" id="blog-next-{{ section.id }}" aria-label="Next">
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="9 18 15 12 9 6"></polyline>
              </svg>
            </button>
          </div>
        {%- endif -%}
      </div>
    </div>
    
    <div class="featured-blog-grid" id="blog-grid-{{ section.id }}">
      {%- if blog != blank and blog.articles.size > 0 -%}
        {%- for article in blog.articles limit: section.settings.posts_limit -%}
          <article class="featured-blog-card">
            {%- if article.image != blank and section.settings.show_image -%}
              <a href="{{ article.url }}" class="featured-blog-card__image" aria-label="{{ article.title }}">
                {{ article.image | image_url: width: 600 | image_tag: loading: 'lazy', alt: article.title }}
              </a>
            {%- else -%}
              <div class="featured-blog-card__image">
                <div class="featured-blog-card__image-placeholder">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                    <circle cx="8.5" cy="8.5" r="1.5"></circle>
                    <polyline points="21 15 16 10 5 21"></polyline>
                  </svg>
                </div>
              </div>
            {%- endif -%}
            
            <div class="featured-blog-card__content">
              {%- if section.settings.show_tags and article.tags.size > 0 -%}
                <div class="featured-blog-card__tags">
                  <span class="featured-blog-card__tag">{{ article.tags.first }}</span>
                </div>
              {%- endif -%}
              
              <h3 class="featured-blog-card__title">
                <a href="{{ article.url }}">{{ article.title }}</a>
              </h3>
              
              {%- if section.settings.show_excerpt -%}
                {%- if article.excerpt != blank -%}
                  <p class="featured-blog-card__excerpt">{{ article.excerpt | strip_html }}</p>
                {%- elsif article.content != blank -%}
                  <p class="featured-blog-card__excerpt">{{ article.content | strip_html | truncate: 120 }}</p>
                {%- endif -%}
              {%- endif -%}
              
              {%- if section.settings.show_meta -%}
                <div class="featured-blog-card__meta">
                  {%- if section.settings.show_author -%}
                    <span class="featured-blog-card__meta-author">
                      {{ article.author }}
                    </span>
                  {%- endif -%}
                  
                  {%- if section.settings.show_date -%}
                    <span class="featured-blog-card__meta-date">
                      POSTED ON
                    </span>
                  {%- endif -%}
                </div>
              {%- endif -%}
              
              {%- if section.settings.show_button -%}
                <a href="{{ article.url }}" class="featured-blog-card__button">
                  {{ section.settings.button_text }}
                </a>
              {%- endif -%}
            </div>
          </article>
        {%- endfor -%}
      {%- else -%}
        {%- for i in (1..section.settings.posts_limit) -%}
          <article class="featured-blog-card">
            <div class="featured-blog-card__image">
              <div class="featured-blog-card__image-placeholder">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                  <circle cx="8.5" cy="8.5" r="1.5"></circle>
                  <polyline points="21 15 16 10 5 21"></polyline>
                </svg>
              </div>
            </div>
            
            <div class="featured-blog-card__content">
              <h3 class="featured-blog-card__title">
                <a href="#">Post</a>
              </h3>
              
              {%- if section.settings.show_excerpt -%}
                <p class="featured-blog-card__excerpt">Share your brand's story with your customers</p>
              {%- endif -%}
              
              {%- if section.settings.show_meta -%}
                <div class="featured-blog-card__meta">
                  <span class="featured-blog-card__meta-author">
                    AUTHOR
                  </span>
                  
                  {%- if section.settings.show_date -%}
                    <span class="featured-blog-card__meta-date">
                      POSTED ON
                    </span>
                  {%- endif -%}
                </div>
              {%- endif -%}
              
              {%- if section.settings.show_button -%}
                <a href="#" class="featured-blog-card__button">
                  READ MORE
                </a>
              {%- endif -%}
            </div>
          </article>
        {%- endfor -%}
      {%- endif -%}
    </div>
  </div>
</div>

