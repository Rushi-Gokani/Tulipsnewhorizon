{%- if section.blocks.size > 0 -%}
  {{- 'section-image-slider.css' | asset_url | stylesheet_tag -}}
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
  <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
  <script src="{{- 'image-slider.js' | asset_url -}}" defer="defer"></script>

  {%- liquid
    if section.settings.slideshow_pagination_style == 'style-1'
      assign slide_progress_multiplier = 3200
    else
      assign slide_progress_multiplier = 2000
    endif
  -%}

  {% style %}
    #shopify-section-{{ section.id }} {
      --slideshow-pagination-progress-time: {{ section.settings.slideshow_autoplay_interval | times: slide_progress_multiplier }}ms;
    }

    {% unless section.index0 == 0 -%}
      #shopify-section-{{ section.id }} .image-slider__inner {
        z-index: 1;
      }
    {% endunless %};

    {%- if section.settings.slideshow_autoplay_interval == 0 -%}
      #shopify-section-{{ section.id }} .progress,
      #shopify-section-{{ section.id }} .image-slider__swiper-pagination-horizontal::before,
      #shopify-section-{{ section.id }} .image-slider__swiper-pagination-horizontal::after {
        opacity: 0;
      }
      #shopify-section-{{ section.id }} .image-slider__swiper-pagination:not(.image-slider__swiper-pagination-horizontal) .swiper-pagination-bullet-active {
        border-color: transparent;
      }
    {%- endif -%}
  {% endstyle %}

  {%- capture image_slider_slides -%}
    {%- for block in section.blocks -%}
      {%- if section.blocks.size > 1 -%}
        <div class="swiper-slide image-slider__swiper-slide color-{{ block.settings.color_scheme }} gradient" {{ block.shopify_attributes }} data-index="{{- forloop.index0 -}}">
      {%- endif -%}

      {%- liquid
        assign block_link = block.settings.link
        if block_link == blank and block.settings.button_link_1_type == 'card'
          assign block_link = block.settings.button_link_1
        endif
      -%}

      {%- if forloop.first -%}
        {%- assign desktop_loading = 'eager' -%}
        {%- assign desktop_fetchpriority = 'high' -%}
      {%- else -%}
        {%- assign desktop_loading = 'lazy' -%}
        {%- assign desktop_fetchpriority = 'low' -%}
      {%- endif -%}
      {%- assign mobile_loading = desktop_loading -%}
      {%- assign mobile_fetchpriority = desktop_fetchpriority -%}

      <div class="image-slider__inner">
        {%- comment -%}Desktop media - always show on desktop, hide on mobile{%- endcomment -%}
        <div class="media media--overlay image-slider__media{% if block.settings.image_mobile != blank %} hidden--mobile{% endif %}">
          {%- if block.settings.image != blank -%}
            {%- if block_link != blank -%}
              <a href="{{ block_link }}">
            {%- endif -%}
              {%- render 'image', image: block.settings.image, width: 2160, alt: block.settings.image.alt | default: block.settings.heading, loading: desktop_loading, fetchpriority: desktop_fetchpriority -%}
            {%- if block_link != blank -%}
              </a>
            {%- endif -%}
          {%- else -%}
            {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>

        {%- comment -%}Mobile media - show only on mobile (falls back to desktop image if not set){%- endcomment -%}
        {%- if block.settings.image_mobile != blank -%}
          <div class="media media--overlay image-slider__media hidden--desktop">
            {%- if block_link != blank -%}
              <a href="{{ block_link }}">
            {%- endif -%}
              {%- render 'image', image: block.settings.image_mobile, width: 1080, alt: block.settings.image_mobile.alt | default: block.settings.heading, loading: mobile_loading, fetchpriority: mobile_fetchpriority -%}
            {%- if block_link != blank -%}
              </a>
            {%- endif -%}
          </div>
        {%- endif -%}

        {%- if block.settings.heading != blank or block.settings.text != blank or block.settings.button_label_1 != blank or block.settings.button_label_2 != blank -%}
          <div class="image-slider__content align-{{ block.settings.content_alignment }} text-{{ block.settings.content_alignment }} justify-{{ block.settings.content_position }} align-{{ block.settings.content_alignment_mobile }}--mobile text-{{ block.settings.content_alignment_mobile }}--mobile justify-{{ block.settings.content_position_mobile }}--mobile">
            {%- if block.settings.heading != blank -%}
              <h2 class="image-slider__heading">
                {{- block.settings.heading -}}
              </h2>
            {%- endif -%}

            {%- if block.settings.text != blank -%}
              <div class="image-slider__entry entry">
                {{- block.settings.text -}}
              </div>
            {%- endif -%}

            {%- if block.settings.button_label_1 != blank or block.settings.button_label_2 != blank -%}
              <div class="image-slider__button">
                {%- if block.settings.button_label_1 != blank -%}
                  {%- render 'button',
                    type: 'link',
                    class: 'button',
                    button_style: block.settings.button_style_1,
                    value: block.settings.button_label_1,
                    href: block.settings.button_link_1
                  -%}
                {%- endif -%}
                {%- if block.settings.button_label_2 != blank -%}
                  {%- render 'button',
                    type: 'link',
                    class: 'button',
                    button_style: block.settings.button_style_2,
                    value: block.settings.button_label_2,
                    href: block.settings.button_link_2
                  -%}
                {%- endif -%}
              </div>
            {%- endif -%}
          </div>
        {%- endif -%}

        {%- liquid
          if block.settings.button_link_1 != blank and block.settings.button_link_1_type == 'card'
            echo '<a: block.settings.button href="' | append_link_1 | append: '" class="section-image-slider__link">&nbsp;</a>'
          endif
        -%}

      </div>

      {%- if section.blocks.size > 1 -%}
        </div>
      {%- endif -%}
    {%- endfor -%}
  {%- endcapture -%}

  <div class="image-slider-banner {% unless section.blocks.size > 1 -%} color-{{ section.blocks.first.settings.color_scheme }} gradient{%- endunless-%}">
    {%- assign autoplay_interval = section.settings.slideshow_autoplay_interval | times: 1 -%}
    {%- if section.blocks.size > 1 -%}
      <image-slider
        class="swiper image-slider__swiper"
        aria-label="{{- 'theme.accessibility.slideshow' | t -}}"
        data-autoplay="{%- if autoplay_interval > 0 -%}true{%- else -%}false{%- endif -%}"
        data-autoplay-interval="{{- autoplay_interval | times: 1000 -}}"
        data-arrows="{{- section.settings.show_slideshow_navigation -}}"
      >
        <div class="swiper-wrapper image-slider__swiper-wrapper">
          {{ image_slider_slides }}
        </div>

        {%- if section.settings.show_slideshow_pagination -%}
          <div
            class="swiper-pagination image-slider__swiper-pagination{% if section.settings.slideshow_pagination_style == 'style-2' %} image-slider__swiper-pagination-horizontal{% endif %}"
          ></div>
        {%- endif -%}

        {%- if section.settings.show_slideshow_navigation -%}
          <div class="swiper-buttons image-slider__swiper-buttons no-js-hidden {{ section.settings.slideshow_navigation_position }} color-{{ section.settings.color_scheme_arrows }}">
            <button
              class="swiper-button image-slider__swiper-button swiper-button--prev"
              aria-label="{{- 'theme.actions.previous' | t -}}"
            >
              <svg
                class="icon icon-previous"
                fill="none"
                viewBox="0 0 18 19"
              >
                {%- render 'icon', icon: 'previous' -%}
              </svg>
            </button>
            <button
              class="swiper-button image-slider__swiper-button swiper-button--next"
              aria-label="{{- 'theme.actions.next' | t -}}"
            >
              <svg
                class="icon icon-next"
                fill="none"
                viewBox="0 0 18 19"
              >
                {%- render 'icon', icon: 'next' -%}
              </svg>
            </button>
          </div>
        {%- endif -%}
      </image-slider>
    {%- else -%}
      {{ image_slider_slides }}
    {%- endif -%}
  </div>
{%- endif -%}

{% schema %}
{
  "name": "Image Slider",
  "tag": "section",
  "class": "section-image-slider",
  "settings": [
    {
      "type": "header",
      "content": "Slideshow Settings"
    },
    {
      "type": "range",
      "id": "slideshow_autoplay_interval",
      "min": 0,
      "max": 60,
      "step": 1,
      "unit": "s",
      "label": "Autoplay interval",
      "info": "Set to 0 to disable autoplay",
      "default": 6
    },
    {
      "type": "checkbox",
      "id": "show_slideshow_navigation",
      "label": "Show navigation arrows",
      "default": true
    },
    {
      "type": "select",
      "id": "slideshow_navigation_position",
      "label": "Navigation position",
      "options": [
        {
          "value": "image-slider__swiper-buttons--sides",
          "label": "Sides"
        },
        {
          "value": "image-slider__swiper-buttons--start",
          "label": "Start"
        },
        {
          "value": "image-slider__swiper-buttons--center",
          "label": "Center"
        }
      ],
      "default": "image-slider__swiper-buttons--start"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme_arrows",
      "label": "Arrows color scheme",
      "default": "scheme-1"
    },
    {
      "type": "checkbox",
      "id": "show_slideshow_pagination",
      "label": "Show pagination",
      "default": true
    },
    {
      "type": "select",
      "id": "slideshow_pagination_style",
      "label": "Pagination style",
      "options": [
        {
          "value": "style-1",
          "label": "Style 1"
        },
        {
          "value": "style-2",
          "label": "Style 2"
        }
      ],
      "default": "style-1"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "color_scheme",
          "id": "color_scheme",
          "default": "scheme-1",
          "label": "Color scheme"
        },
        {
          "type": "header",
          "content": "Content"
        },
        {
          "type": "richtext",
          "id": "heading",
          "label": "Heading",
          "default": "<p>Slide Heading</p>"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Slide description text</p>"
        },
        {
          "type": "header",
          "content": "Buttons"
        },
        {
          "type": "url",
          "id": "button_link_1",
          "label": "Button 1 link",
          "default": "/"
        },
        {
          "type": "text",
          "id": "button_label_1",
          "label": "Button 1 label",
          "default": "View more"
        },
        {
          "type": "select",
          "id": "button_style_1",
          "label": "Button 1 style",
          "options": [
            {
              "value": "button--filled",
              "label": "Filled"
            },
            {
              "value": "button--outlined",
              "label": "Outlined"
            },
            {
              "value": "button--text",
              "label": "Text"
            }
          ],
          "default": "button--filled"
        },
        {
          "type": "url",
          "id": "button_link_2",
          "label": "Button 2 link",
          "default": "/"
        },
        {
          "type": "text",
          "id": "button_label_2",
          "label": "Button 2 label",
          "default": "Learn more"
        },
        {
          "type": "select",
          "id": "button_style_2",
          "label": "Button 2 style",
          "options": [
            {
              "value": "button--filled",
              "label": "Filled"
            },
            {
              "value": "button--outlined",
              "label": "Outlined"
            },
            {
              "value": "button--text",
              "label": "Text"
            }
          ],
          "default": "button--outlined"
        },
        {
          "type": "header",
          "content": "Desktop Media"
        },
        {
          "type": "select",
          "id": "content_position",
          "label": "Content position",
          "options": [
            {
              "value": "start",
              "label": "Start"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "end",
              "label": "End"
            }
          ],
          "default": "center"
        },
        {
          "type": "select",
          "id": "content_alignment",
          "label": "Content alignment",
          "options": [
            {
              "value": "start",
              "label": "Start"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "end",
              "label": "End"
            }
          ],
          "default": "center"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Image link"
        },
