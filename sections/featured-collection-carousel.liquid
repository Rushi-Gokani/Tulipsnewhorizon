{{ 'section-featured-collection-carousel.css' | asset_url | stylesheet_tag }}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"/>
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .featured-collection-carousel-section {
    background-color: {{ section.settings.bg_color }};
  }
{%- endstyle -%}

<div class="featured-collection-carousel-section section-{{ section.id }}-padding">
  <div class="page-width">
    {%- if section.settings.title != blank -%}
      <div class="title-wrapper-with-link title-wrapper--self-padded-mobile title-wrapper--no-top-margin centered">
        <h2 class="title {{ section.settings.heading_size }} center">
          {{ section.settings.title | escape }}
        </h2>
      </div>
    {%- endif -%}

    <div class="featured-collection-carousel-slider swiper">
      <div class="swiper-wrapper">
        {% if section.settings.collection != blank %}
          {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
            <div class="swiper-slide">
              {% capture product_card_content %}
                {% capture gallery_children %}
                  <div class="product-badges product-badges--top-left">
                    {%- if product.compare_at_price > product.price -%}
                      {% assign discount = product.compare_at_price | minus: product.price | times: 100.0 | divided_by: product.compare_at_price | round %}
                      <div class="product-badges__badge product-badges__badge--custom">
                        {{ discount }}% OFF
                      </div>
                    {%- endif -%}
                    {%- if product.available == false -%}
                      <div class="product-badges__badge product-badges__badge--custom">
                        SOLD OUT
                      </div>
                    {%- endif -%}
                  </div>
                {% endcapture %}

                {% render 'card-gallery', product: product, children: gallery_children %}
                <div class="card-info" style="padding: 15px;">
                  <h3 class="card-title h5" style="margin: 0 0 5px;">
                    <a href="{{ product.url }}" class="full-unstyled-link" style="text-decoration: none; color: inherit;">
                      {{ product.title }}
                    </a>
                  </h3>
                  <div style="margin-bottom: 15px;">
                    {% render 'price', product_resource: product, show_compare_price: true %}
                  </div>
                  {% render 'product-card-button', product: product %}
                </div>
              {% endcapture %}

              {% render 'product-card',
                product: product,
                children: product_card_content
              %}
            </div>
          {%- endfor -%}
        {% elsif section.blocks.size > 0 %}
          {%- for block in section.blocks limit: section.settings.products_to_show -%}
            {%- assign product = block.settings.product -%}
            {% if product != blank %}
              <div class="swiper-slide" {{ block.shopify_attributes }}>
                {% capture product_card_content %}
                  {% capture gallery_children %}
                    <div class="product-badges product-badges--top-left">
                      {%- if product.compare_at_price > product.price -%}
                        {% assign discount = product.compare_at_price | minus: product.price | times: 100.0 | divided_by: product.compare_at_price | round %}
                        <div class="product-badges__badge product-badges__badge--custom">
                          {{ discount }}% OFF
                        </div>
                      {%- endif -%}
                      {%- if product.available == false -%}
                        <div class="product-badges__badge product-badges__badge--custom">
                          SOLD OUT
                        </div>
                      {%- endif -%}
                    </div>
                  {% endcapture %}

                  {% render 'card-gallery', product: product, children: gallery_children %}
                  <div class="card-info" style="padding: 15px;">
                    <h3 class="card-title h5" style="margin: 0 0 5px;">
                      <a href="{{ product.url }}" class="full-unstyled-link" style="text-decoration: none; color: inherit;">
                        {{ product.title }}
                      </a>
                    </h3>
                    <div style="margin-bottom: 15px;">
                      {% render 'price', product_resource: product, show_compare_price: true %}
                    </div>
                    {% render 'product-card-button', product: product %}
                  </div>
                {% endcapture %}

                {% render 'product-card',
                  product: product,
                  children: product_card_content
                %}
              </div>
            {% endif %}
          {%- endfor -%}
        {% else %}
          {%- for i in (1..4) -%}
            <div class="swiper-slide">
              {% capture placeholder_content %}
                <div class="card-content">
                  <div class="media media--square media--transparent">
                    {{ 'product-' | append: i | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                  <div class="card-info" style="padding: 10px 0;">
                    <h3 class="card-title h5">
                      Example Product Title
                    </h3>
                    <div>
                      $19.99
                    </div>
                  </div>
                </div>
              {% endcapture %}
              {% render 'product-card', product: nil, children: placeholder_content %}
            </div>
          {%- endfor -%}
        {% endif %}
      </div>
      
      {% if section.settings.show_arrows %}
          <div class="featured-collection-controls">
            <div class="swiper-button-prev">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
            <div class="swiper-button-next">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
          </div>
      {% endif %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    new Swiper('.featured-collection-carousel-slider', {
      slidesPerView: 1.2,
      spaceBetween: 10,
      loop: true,
      centeredSlides: false,
      autoplay: {
        delay: {{ section.settings.autoplay_speed | times: 1000 }},
        disableOnInteraction: false,
      },
      navigation: {
        nextEl: '.featured-collection-carousel-section .swiper-button-next',
        prevEl: '.featured-collection-carousel-section .swiper-button-prev',
      },
      breakpoints: {
        750: {
          slidesPerView: 2.5,
           spaceBetween: 20,
        },
        990: {
          slidesPerView: {{ section.settings.desktop_columns }},
           spaceBetween: 30,
        }
      }
    });
  });
</script>

{% schema %}
{
  "name": "Featured Collection Slide",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Featured collection",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 8,
      "label": "Maximum products to show"
    },
    {
      "type": "range",
      "id": "desktop_columns",
      "min": 1,
      "max": 5,
      "step": 0.5,
      "default": 4,
      "label": "Number of columns on desktop"
    },
    {
      "type": "header",
      "content": "Carousel Settings"
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "min": 1,
      "max": 10,
      "step": 1,
      "default": 3,
      "unit": "s",
      "label": "Autoplay speed"
    },
    {
        "type": "checkbox",
        "id": "show_arrows",
        "label": "Show navigation arrows",
        "default": true
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    }
  ],
  "presets": [
    {
      "name": "Featured Collection Slide"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "limit": 12,
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ]
}
{% endschema %}
