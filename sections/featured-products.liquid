{%- style -%}
  #shopify-section-{{ section.id }} > div {
    padding-block-start: calc(var(--section-spacing-unit-size) * {{ section.settings.spacing_top }});
    padding-block-end: calc(var(--section-spacing-unit-size) * {{ section.settings.spacing_bottom }});
  }

  .fp-tabs-{{ section.id }} {
    width: 100%;
  }

  .fp-tabs-{{ section.id }}__nav {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.75rem;
    margin-block-end: 2rem;
  }

  .fp-tabs-{{ section.id }}__btn {
    padding: 0.6rem 1.6rem;
    border: 1px solid #a3ca6d;
    border-radius: 999px;
    background: transparent;
    color: rgb(var(--color-foreground));
    cursor: pointer;
    font: inherit;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
  }

  .fp-tabs-{{ section.id }}__btn:hover,
  .fp-tabs-{{ section.id }}__btn.active {
    background-color: #a3ca6d;
    border-color: #a3ca6d;
    color: #ffffff;
  }

  .fp-tabs-{{ section.id }}__panel {
    display: none;
  }

  .fp-tabs-{{ section.id }}__panel.active {
    display: block;
    animation: fpTabFadeIn-{{ section.id }} 0.3s ease forwards;
  }

  @keyframes fpTabFadeIn-{{ section.id }} {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .fp-tabs-{{ section.id }}__grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: 1.5rem;
  }

  .fp-tabs-{{ section.id }}__item {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .fp-tabs-{{ section.id }}__empty {
    text-align: center;
    padding: 2rem;
    color: rgba(var(--color-foreground), 0.6);
  }

  @media screen and (max-width: 749px) {
    .fp-tabs-{{ section.id }}__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
  }

  {% if section.settings.button_color_scheme == 'custom' %}
