            <div class="section__head-title">
              {%- if section.settings.subheading != blank -%}
                <span class="text--label rte">{{- section.settings.subheading -}}</span>
              {%- endif -%}
              {%- if section.settings.heading != blank -%}
                <h2 class="section__heading {{ section.settings.heading_size }}">{{- section.settings.heading -}}</h2>
              {%- endif -%}
            </div>
          </div>
        {%- endif -%}

        <div class="section__body">
          <div class="fp-tabs-{{ section.id }}" id="fp-tabs-{{ section.id }}">
            <div class="fp-tabs-{{ section.id }}__nav" role="tablist">
              {%- for block in section.blocks -%}
                {% liquid
                  assign collection_setting = block.settings.collection
                  assign selected_collection = blank
                  if collection_setting != blank
                    assign collection_handle = collection_setting.handle | default: collection_setting
                    if collection_handle != blank
                      assign selected_collection = collections[collection_handle]
                    endif
                    if selected_collection == blank and collection_setting.title
                      assign selected_collection = collection_setting
                    endif
                  endif

                  assign block_label = block.settings.title
                  if block_label == blank and selected_collection
                    assign block_label = selected_collection.title
                  elsif block_label == blank and block.settings.vendor != blank
                    assign block_label = block.settings.vendor
                  elsif block_label == blank and block.settings.collection_of_products != blank
                    assign block_label = block.settings.collection_of_products
                  endif

                  if block_label == blank
                    assign block_label = 'Collection'
                  endif
                %}
                <button
                  class="fp-tabs-{{ section.id }}__btn{% if block.id == first_active_block %} active{% endif %}"
                  type="button"
                  role="tab"
                  aria-controls="fp-panel-{{ section.id }}-{{ block.id }}"
                  aria-selected="{% if block.id == first_active_block %}true{% else %}false{% endif %}"
                  data-fp-tab="{{ block.id }}"
                  {{ block.shopify_attributes }}
                >
                  {{- block_label -}}
                </button>
              {%- endfor -%}
            </div>

            {%- for block in section.blocks -%}
              {% liquid
                assign collection_setting = block.settings.collection
                assign selected_collection = blank
                if collection_setting != blank
                  assign collection_handle = collection_setting.handle | default: collection_setting
                  if collection_handle != blank
                    assign selected_collection = collections[collection_handle]
                  endif
                  if selected_collection == blank and collection_setting.products
                    assign selected_collection = collection_setting
                  endif
                endif

                assign block_products = blank
                if selected_collection
                  assign block_products = selected_collection.products
                elsif block.settings.products != blank
                  assign block_products = block.settings.products
                elsif block.settings.vendor != blank and block.settings.collection_of_products != blank
                  assign vendor_collection_handle = block.settings.collection_of_products | handleize
                  if vendor_collection_handle != blank and collections[vendor_collection_handle]
                    assign block_products = collections[vendor_collection_handle].all_products | where: 'vendor', block.settings.vendor
                  endif
                endif

                if block_products and block.settings.show_unavailable_products != true
                  assign block_products = block_products | where: 'available'
                endif
              %}

              <div
                id="fp-panel-{{ section.id }}-{{ block.id }}"
                class="fp-tabs-{{ section.id }}__panel{% if block.id == first_active_block %} active{% endif %}"
                data-fp-panel="{{ block.id }}"
                role="tabpanel"
                aria-labelledby="fp-tab-{{ section.id }}-{{ block.id }}"
              >
                {% if block_products and block_products.size > 0 %}
                  <div class="fp-tabs-{{ section.id }}__grid">
                    {%- assign shown_products = 0 -%}
                    {%- for product in block_products -%}
                      {%- if shown_products < section.settings.max_products -%}
                        {%- if section.settings.product_filter == 'discounted' and product.compare_at_price_max <= product.price -%}
                          {% continue %}
                        {%- endif -%}
                        <div class="fp-tabs-{{ section.id }}__item">
                          {% render 'card-product', product_ref: product, section_id: section.id %}
                        </div>
                        {%- assign shown_products = shown_products | plus: 1 -%}
                      {%- endif -%}
                    {%- endfor -%}

                    {% if shown_products == 0 %}
                      <p class="fp-tabs-{{ section.id }}__empty">
                        {{ 'collections.general.no_products' | t | default: 'No products match this filter.' }}
                      </p>
                    {% endif %}
                  </div>
                {% else %}
                  <p class="fp-tabs-{{ section.id }}__empty">{{ 'collections.general.no_products' | t | default: 'No products found in this block.' }}</p>
                {% endif %}
              </div>
            {%- endfor -%}
          </div>
        </div>

        <div class="section__foot">
          <div class="section__head--buttons">
            {{ section_button | replace_first: 'custom_class' }}
          </div>
        </div>

      </div>
    </div>
  </div>
{%- endif -%}
<script>
  (function initFeaturedProductsTabs_{{ section.id }}() {
    const setupTabs = () => {
      const root = document.querySelector('#shopify-section-{{ section.id }}');
      if (!root) return;
      const tabsRoot = root.querySelector('#fp-tabs-{{ section.id }}');
      if (!tabsRoot) return;

      const buttons = tabsRoot.querySelectorAll('[data-fp-tab]');
      const panels = tabsRoot.querySelectorAll('[data-fp-panel]');

      buttons.forEach((button) => {
        button.addEventListener('click', () => {
          const targetId = button.getAttribute('data-fp-tab');

          buttons.forEach((btn) => {
            btn.classList.remove('active');
            btn.setAttribute('aria-selected', 'false');
          });
          panels.forEach((panel) => {
            panel.classList.remove('active');
          });

          button.classList.add('active');
          button.setAttribute('aria-selected', 'true');
          const targetPanel = tabsRoot.querySelector(`[data-fp-panel="${targetId}"]`);
          if (targetPanel) {
            targetPanel.classList.add('active');
          }
        }, { once: false });
      });
    };

    document.addEventListener('DOMContentLoaded', setupTabs);
    document.addEventListener('shopify:section:load', (event) => {
      if (event.detail && event.detail.sectionId === '{{ section.id }}') {
        setupTabs();
      }
    });
    document.addEventListener('shopify:block:select', (event) => {
      if (event.detail && event.detail.sectionId === '{{ section.id }}') {
        const selectedButton = document.querySelector(`[data-fp-tab="${event.detail.blockId}"]`);
        selectedButton && selectedButton.click();
      }
    });
  })();
</script>
