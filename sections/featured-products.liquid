      color: {{ section.settings.custom_add_to_cart_text }} !important;
      border-color: {{ section.settings.custom_add_to_cart_outline }} !important;
    }
    #shopify-section-{{ section.id }} .collection-buttons-custom .custom_styled_button:hover {
      background: {{ section.settings.custom_add_to_cart_outline }} !important;
      color: #ffffff !important;
    }
    #shopify-section-{{ section.id }} .collection-buttons-custom .custom_styled_button svg path {
      stroke: {{ section.settings.custom_add_to_cart_outline }} !important;
    }
    #shopify-section-{{ section.id }} .collection-buttons-custom .custom_styled_button:hover svg path {
