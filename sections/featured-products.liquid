{%- liquid
  if section.blocks.size > 0
    assign products_array = true
  else
    assign products_array = blank
  endif
-%}
{%- if section.settings.enable_new_styles -%}
  {{- 'collection-button-schemes.css' | asset_url | stylesheet_tag -}}
{%- endif -%}
{%- if products_array != null -%}
  {%- render 'css', css: 'component-card-product.css' -%}

  {%- assign section_button = blank -%}
  {%- if section.settings.button_label != blank -%}
    {%- capture section_button -%}
      {%- render 'button',
        type: 'link',
        class: 'button custom_class',
        button_style: section.settings.button_style,
        value: section.settings.button_label,
        href: section.settings.button_link
      -%}
    {%- endcapture -%}
  {%- endif -%}

  {%- assign first_active_block = '' -%}
  {%- for block in section.blocks -%}
    {% liquid
      assign collection_setting = block.settings.collection
      assign selected_collection = blank
      if collection_setting != blank
        assign collection_handle = collection_setting.handle | default: collection_setting
        if collection_handle != blank
          assign selected_collection = collections[collection_handle]
        endif
        if selected_collection == blank and collection_setting.products
          assign selected_collection = collection_setting
        endif
      endif

      assign block_products = blank
      if selected_collection
        assign block_products = selected_collection.products
      elsif block.settings.products != blank
        assign block_products = block.settings.products
      elsif block.settings.vendor != blank and block.settings.collection_of_products != blank
        assign vendor_collection_handle = block.settings.collection_of_products | handleize
        if vendor_collection_handle != blank and collections[vendor_collection_handle]
          assign block_products = collections[vendor_collection_handle].all_products | where: 'vendor', block.settings.vendor
        endif
      endif

      if block_products and block.settings.show_unavailable_products != true
        assign block_products = block_products | where: 'available'
      endif

      if first_active_block == '' and block_products and block_products.size > 0
        assign first_active_block = block.id
      endif
    %}
  {%- endfor -%}
  {%- if first_active_block == '' and section.blocks.size > 0 -%}
    {%- assign first_active_block = section.blocks.first.id -%}
  {%- endif -%}

  <div class="color-{{ section.settings.color_scheme }} gradient">
    <div
