      "max": 600,
      "step": 10,
      "unit": "px",
      "default": 400
    },
    {
      "type": "header",
      "content": "Blog Card Design"
    },
    {
      "type": "color",
      "id": "card_heading_color",
      "label": "Card Heading Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "card_title_color",
      "label": "Card Title Color",
      "default": "#222222"
    },
    {
      "type": "color",
      "id": "card_info_color",
      "label": "Card Info Text Color",
      "default": "#666666"
    },
    {
      "type": "range",
      "id": "card_border_radius",
      "label": "Card Image Border Radius",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "default": 8
    }
  ]
}
{% endschema %}
