      "default": "#FF6B3B"
    },
    {
      "type": "color",
      "id": "hero_text_color",
      "label": "Hero Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "text",
      "id": "hero_text_1",
      "label": "Main Heading Text",
      "default": "Never miss a beat with our latest"
    },
    {
      "type": "text",
      "id": "hero_text_2",
