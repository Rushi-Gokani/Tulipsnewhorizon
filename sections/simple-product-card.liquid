{% comment %}
  Simple Product Card - Standalone component matching screenshot design
  Features:
  - Hover effects with card lift and image zoom
  - Green "Add to Cart" button when in stock
  - Gray "Notify Me" button when out of stock
  - Clean, minimal design
{% endcomment %}

<div class="simple-product-card-wrapper">
  <div class="simple-product-card" data-product-id="{{ product.id | default: 'placeholder' }}">
    <div class="simple-product-card__image-wrapper">
      <a href="{{ product.url | default: '#' }}" class="simple-product-card__link">
        {% if product.featured_image %}
          <img
            src="{{ product.featured_image | img_url: '600x' }}"
            alt="{{ product.featured_image.alt | escape }}"
            class="simple-product-card__image"
            loading="lazy"
          >
        {% else %}
          {{ 'product-1' | placeholder_svg_tag: 'simple-product-card__placeholder' }}
        {% endif %}
      </a>

      {% if product.available == false %}
        <span class="simple-product-card__badge simple-product-card__badge--sold-out">Sold Out</span>
      {% endif %}

      <!-- Wishlist Button -->
      <button
        type="button"
        class="simple-product-card__wishlist"
        data-product-id="{{ product.id | default: 'placeholder' }}"
        aria-label="Add to wishlist"
      >
        <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M9 15.5C9 15.5 1.5 11 1.5 5.5C1.5 3 3.5 1 6 1C7.5 1 8.5 1.8 9 2.5C9.5 1.8 10.5 1 12 1C14.5 1 16.5 3 16.5 5.5C16.5 11 9 15.5 9 15.5Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </div>

    <div class="simple-product-card__content">
      <a href="{{ product.url | default: '#' }}" class="simple-product-card__link">
        <h3 class="simple-product-card__title">{{ product.title | default: 'Fiddle Leaf Fig' }}</h3>
      </a>

      <div class="simple-product-card__price">
        {% if product.compare_at_price > product.price %}
          <span class="simple-product-card__price--compare">{{ product.compare_at_price | money }}</span>
          <span class="simple-product-card__price--sale">{{ product.price | money }}</span>
        {% else %}
          <span class="simple-product-card__price--regular">{{ product.price | money | default: '$99.00' }}</span>
        {% endif %}
      </div>

      <div class="simple-product-card__actions">
        {% if product.available != false %}
          <button
            type="button"
            class="simple-product-card__add-to-cart"
            data-variant-id="{{ product.selected_or_first_available_variant.id }}"
          >
            <span class="btn__text">Add to Cart</span>
            <span class="btn__icon">
              <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M1.5 1.5H4.16667L6.6 12.3C6.675 12.675 7.0125 12.9 7.3875 12.9H15.15C15.525 12.9 15.8625 12.675 15.9375 12.3L17.6667 4.5H4.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </span>
            <span class="btn__checkmark">
              <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M4.5 9L7.5 12L13.5 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </span>
          </button>
        {% else %}
          <button
            type="button"
            class="simple-product-card__notify-me"
            data-product-id="{{ product.id | default: 'placeholder' }}"
          >
            <span class="btn__text">Notify Me</span>
            <svg class="btn__icon" width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M9 1.5V10.5M9 10.5L6.5 8M9 10.5L11.5 8M1.5 15H16.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Simple Product Card",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Select Product"
    }
  ],
  "presets": [
    {
      "name": "Simple Product Card"
    }
  ]
}
{% endschema %}
